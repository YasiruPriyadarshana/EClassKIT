<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wonder.eclasskit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PrivacyPolicy"></activity>
        <activity
            android:name=".video.FullScreenVideo"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".AddNewCourse"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".video.VideoPlayer"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".TeachersRegistration" />
        <activity android:name=".TeacherLogin" />
        <activity android:name=".Class" />
        <activity android:name=".StudentAccount" />
        <activity android:name=".MyResult" />
        <activity
            android:name=".QuizHome"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ReviewQuiz" />
        <activity android:name=".addQuestions" />
        <activity android:name=".quizMain" />
        <activity
            android:name=".Comments"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".User" />
        <activity android:name=".Notes" />
        <activity android:name=".ModelPapers" />
        <activity android:name=".PastPapers" />
        <activity android:name=".AboutUs" />
        <activity android:name=".GetInfo" />
        <activity android:name=".Settings" />
        <activity
            android:name=".Starting"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <service android:name=".Services.BackgroundService" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>