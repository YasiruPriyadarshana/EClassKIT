<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/eclasskitbackground"
    tools:context=".AboutTeacher">

    <ImageButton
        android:id="@+id/teacher_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/button_states"
        android:contentDescription="@string/todo" />

    <Button
        android:id="@+id/teacherN_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:text="@string/set_teacher_name"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/teacher_desc_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="@string/aboutusdesc"
        android:textColor="#610D0D"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/facebok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/facebook"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/twitter"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/youtube"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/web"
            android:contentDescription="@string/todo" />

    </LinearLayout>
</LinearLayout>